{
  "name": "automation",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "server": "browser-sync src --watch",
    "dev": "npm run server",
    "lint": "stylelint src/styles/*.css", 
    "styles:build": "postcss src/styles/*.css --use autoprefixer --use cssnano -d build/styles",
    "clean:build": "rimraf build && mkdir build",
    "html:build": "cpx src/*.html build",
    "html:minify": "html-minifier --collapse-whitespace src/index.html -o build/index.html",
    "images:build": "imagemin src/img/* -o=build/img",
    "imagesicons:build": "imagemin src/img/icons/* -o=build/img",
    "build": "npm run clean:build && npm run images:build && npm run imagesicons:build && npm run styles:build && npm run html:build && npm run html:minify"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "autoprefixer": "^9.3.1",
    "browser-sync": "^2.26.3",
    "cpx": "^1.5.0",
    "cssnano": "^4.1.7",
    "html-minifier": "^3.5.21",
    "imagemin-cli": "^3.0.0",
    "postcss-cli": "^6.0.1",
    "rimraf": "^2.6.2",
    "stylelint": "^9.8.0",
    "stylelint-config-standard": "^18.2.0" 
  }
}
